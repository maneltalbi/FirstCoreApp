                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li><a class="nav-link scrollto" href="/News">News CRUD</a></li>
                    <li><a class="nav-link scrollto" href="/Categories">Categories CRUD</a></li>
