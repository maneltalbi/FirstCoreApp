@model ContactUs

<div class="container" style="margin-top:10px;margin-bottom:10px">
<div class="col-8">
<form asp-action="SaveContact">
    <div class="row">
        <div class="col form-group">
            <input type="text"  asp-for="Name" required class="form-control"  placeholder="Your Name" >
        </div>
        <div class="col form-group mt-3">
            <input type="email" asp-for="Email" required class="form-control"  placeholder="Your Email">
        </div>
    </div>
    <div class="form-group mt-3">
        <input type="text" asp-for="Subject" required class="form-control"  placeholder="Subject" >
    </div>
    <div class="form-group mt-3">
        <textarea asp-for="Message" required class="form-control"  rows="5" placeholder="Message" ></textarea>
    </div>
    <div class="my-3">
    </div>
    <div ><button class="btn btn-success" type="submit">Send Message</button></div>
</form>
</div>
</div>